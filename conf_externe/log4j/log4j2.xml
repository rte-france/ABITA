<?xml version="1.0" encoding="UTF-8"?>
<Configuration
  strict="false"
  monitorInterval="60" status="info" name="ABITA">
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %p [%t] %C (%F:%L) - %m%n"/>
    </Console>
    <RollingFile
      name="application"
      fileName="${abita.log4j.file.filename}"
      filePattern="${abita.log4j.file.filepattern}"
      ignoreExceptions="false">
      <PatternLayout>
        <Pattern>%d %p [%t] %C (%F:%L) - %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="5000KB" />
      </Policies>
      <DefaultRolloverStrategy max="5" />
    </RollingFile>
  </Appenders>

  <Loggers>
    <Logger name="com" level="info" additivity="false">
      <AppenderRef ref="application"/>
      <!--      <AppenderRef ref="STDOUT"/>-->
    </Logger>
    <Logger name="org.hibernate" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="application"/>
    </Logger>
    <Logger name="org.springframework" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="application"/>
    </Logger>
    <Logger name="org.dozer" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="application"/>
    </Logger>
    <Logger name="com.github.springtestdbunit" level="info" additivity="false">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="application"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="application"/>
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>

</Configuration>
